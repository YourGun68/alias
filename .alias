}

url() {
    firefox "https://www.$1.com"
}

findfile() {
    local filename="$1"
    local command="$2"
    local count=0

    while IFS= read -r file; do
        echo "Le fichier '$file' a été trouvé."
        ((count++))
        if [[ -n "$command" ]]; then
            local dir=$(dirname "$file")
            echo "Changement de répertoire vers : $dir"
            (
                cd "$dir" || exit
                echo "Exécution de la commande : $command"
                eval "$command"
            )
        fi
    done < <(find . -type f -name "$filename")
    if [ "$count" -gt 0 ]; then
        echo "$count fichier(s) '$filename' trouvé(s) dans le répertoire ou les sous-répertoires."
    else
        echo "Aucun fichier '$filename' trouvé dans le répertoire ou les sous-répertoires."
    fi
}
