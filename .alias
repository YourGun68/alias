findfile() {
    local filename="$1"
    local command="$2"
    local count=0

    echo "==="
    while IFS= read -r file; do
        echo "> '$file'"
        ((count++))
        if [[ -n "$command" ]]; then
            local dir=$(dirname "$file")
            (
                cd "$dir" || exit
                eval "$command"
            )
        fi
    done < <(find . -type f -name "$filename")
    if [ "$count" -gt 0 ]; then
        echo "$count fichier(s) '$filename' trouvé(s) dans le répertoire ou les sous-répertoires."
    else
        echo "Aucun fichier '$filename' trouvé dans le répertoire ou les sous-répertoires."
    fi
    echo "==="
}

finddir() {
    local filename="$1"
    local command="$2"
    local count=0

    echo "==="
    while IFS= read -r file; do
        echo "> '$file'"
        ((count++))
        if [[ -n "$command" ]]; then
            local dir=$(dirname "$file")
            (
                cd "$dir" || exit
                eval "$command"
            )
        fi
    done < <(find . -type d -name "$filename")
    if [ "$count" -gt 0 ]; then
        echo "$count fichier(s) '$filename' trouvé(s) dans le répertoire ou les sous-répertoires."
    else
        echo "Aucun fichier '$filename' trouvé dans le répertoire ou les sous-répertoires."
    fi
    echo "==="
}
